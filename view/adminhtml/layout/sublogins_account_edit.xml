<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="SITC\Sublogins\Block\Adminhtml\Account\Edit" name="sublogins_account_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="SITC\Sublogins\Block\Adminhtml\Account\Edit\Tabs" name="account_edit_tabs">
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">account_edit_tab_form</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">account_customer_section</argument>
                    <argument name="block" xsi:type="array">
                        <item name="label" xsi:type="string">Customer </item>
                        <item name="title" xsi:type="string">Customer</item>
                        <item name="url" xsi:type="helper" helper="SITC\Sublogins\Block\Adminhtml\Account\Edit\Tab\Customer::getTabUrl"></item>
                        <item name="class" xsi:type="string">ajax</item>
                    </argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>