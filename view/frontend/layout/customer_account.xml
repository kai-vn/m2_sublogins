<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-create">
                <arguments>
                    <argument name="path" xsi:type="string">sublogins/create/account/</argument>
                    <argument name="label" xsi:type="string">Create Sublogin</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-list">
                <arguments>
                    <argument name="path" xsi:type="string">sublogins/account/listsubaccount/</argument>
                    <argument name="label" xsi:type="string">List Sub Account</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-order-navigation-history">
                <arguments>
                    <argument name="path" xsi:type="string">sublogins/order/history</argument>
                    <argument name="label" xsi:type="string">My Sub-accounts Orders</argument>
                </arguments>
            </block>

        </referenceBlock>
    </body>
</page>